# EditorConfig for TurboMCP
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_style = space
indent_size = 4

# TOML files (Cargo.toml, etc.)
[*.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{ini,cfg}]
indent_size = 2

# Web files
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# Documentation
[*.{rst,tex}]
indent_size = 2