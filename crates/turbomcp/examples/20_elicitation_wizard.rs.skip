            info!("‚úÖ Database configured successfully");
            if let Some(metadata) = result._meta {
                debug!("Metadata: {:?}", metadata);
            }
        }
        Err(e) => error!("‚ùå Database configuration failed: {}", e),
    }

    // Step 3: Configure API
    info!("\nüåê Step 2: API Configuration");
    match server.configure_api(ctx.clone()).await {
